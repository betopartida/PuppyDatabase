<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PerfilFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perfil"
        android:orientation="vertical">

        <!--
         Favor de cambiar "mx.betopartida" por su ruta
        -->

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civ_profile"
            android:layout_width="@dimen/imagen_circular_width"
            android:layout_height="@dimen/imagen_circular_height"
            android:src="@drawable/pet4"
            app:civ_border_color="@color/civ_boder_color"
            app:civ_border_width="@dimen/civ_border_width"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre"
            style="@style/nombre_mascota"
            android:layout_gravity="center"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvFotos"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>
